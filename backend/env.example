# Database Configuration (Railway MySQL Plugin)
DB_HOST=${MYSQLHOST}
DB_USER=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}
DB_NAME=${MYSQLDATABASE}
DB_PORT=${MYSQLPORT}

# Server Configuration
PORT=${PORT}
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# Frontend URL (for CORS) - Railway will provide this
FRONTEND_URL=${RAILWAY_FRONTEND_URL}
RAILWAY_FRONTEND_URL=${RAILWAY_FRONTEND_URL}

# File Upload Configuration
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=5242880 